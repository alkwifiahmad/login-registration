<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body" style="background: #BBDEFB">
      <h1 class="text-center mb-3"><img src="http://www.singaporeg.sg/images/Login.png" alt="" style="width:48px;"> Login</h1>
      <% include ./partials/messages %>
            <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-secondary btn-block">Login</button><br>
        <a href="/users/facebook" class="btn btn-info btn-block"> ( <i class="fab fa-facebook-f"></i> ) Login with Facebook</a>
        <br>
        <a href="/users/google"><button type="button" class="btn btn-primary btn-block"> ( <i class="fab fa-google-plus-g"></i> ) Login with Google</button></a>
        <br>
        <a href="/users/github"><button type="button" class="btn btn-dark btn-block"> ( <i class="fab fa-github"></i> ) Login with Github</button></a>
        <br>
        <a href="/users/linkedin"><button type="button" class="btn btn-success btn-block"> ( <i class="fab fa-linkedin-in"></i> ) Login with Linkedin</button></a>

      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>
